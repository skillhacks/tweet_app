<div class="container">
    <h3>編集ページ</h3>
    <%= form_tag("/posts/"+@post.id.to_s,:method=>:patch) do %>
        <div class="form-group">
            <%= label_tag "form-title", "タイトル" %>
            <%= text_field :posts, :title, id:"form-title", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= label_tag "form-title", "口コミ" %>
            <%= text_field :posts, :body, id:"form-content", class:"form-control" %>
        </div>
            <%= submit_tag "Create", class:"btn btn-primary" %>
    <% end %>
</div>