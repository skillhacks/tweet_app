<div class="container">
    <h3>口コミ一覧ページ</h3>

    <% @posts.each do |post| %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><a href ="/posts/<%= post.id %>"><%= post.title %></a></h3>
            </div>
            <div class="panel-body">
                <%= post.body %>
            </div>
        </div>
    <% end %>
</div>